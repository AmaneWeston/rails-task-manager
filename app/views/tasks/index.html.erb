<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="task">
        <div class="d-flex">
          <i class="far fa-square"></i>
        </div>
        <li>
          <%= link_to task_path(task['id']) do %>
          <strong><%= task.title %></strong>
          <% end %>
        </li>
    </div>
  <% end %>
  <%= link_to 'Add new task', new_task_path, class: 'add-new-task' %>
</div>
